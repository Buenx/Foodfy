{% extends 'layout.njk' %}

{% block content %}

  <section style="margin-top: 40px;" class="cards">

    {% for recipe in recipes %}
      <div class="card">
        <div class="card-image">
          <img src="{{recipe.image}}" alt="">
        </div>
        <h1 class="food-name">{{recipe.title}}</h1>
        <p class="chef-name">{{recipe.author}}</p>
      </div>
    {% endfor %}

    <script src="scripts.js"></script>

  {% endblock %}