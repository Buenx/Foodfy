    <div class="item">
      <div>Imagem da receita</div>
      <div><input type="text" placeholder="" value="{{recipes.image}}" name="image"></div>
    </div>
    
    <div class="item">
      <div>Ingredientes</div>
      <div id="ingredients">
        {% if not recipes.ingredients %}
            <div class="ingredient">
              <input type="text" name="ingredients[]" placeholder="Adicione o ingrediente">
            </div>

        {% else  %}

          {% for recipe in recipes.ingredients %}
              <div class="ingredient">
                <input type="text" name="ingredients[]" value="{{recipe}}" placeholder="Adicione o ingrediente">
              </div>
          {% endfor %}

        {% endif %}
      </div>
      <button type="button" class="add-ingredient">Adicionar Ingrediente</button>
    </div>

    <div class="item">
      <div>Modo de preparo</div>
      <div id="preparations">
        {% if not recipes.preparation %}
            <div class="preparation">
              <input type="text" name="preparation[]" placeholder="Adicione o passo">
            </div>      

        {% else  %}

          {% for recipe in recipes.preparation %}
            <div class="preparation">
              <input type="text" name="preparation[]" value="{{recipe}}" placeholder="Adicione o passo">
            </div>
          {% endfor %}
        
        {% endif %}

      </div>
      <button type="button" class="add-preparation">Adicionar novo passo</button>
    </div>

    <div class="item">
      <div>Informações adicionais</div>
      <div><textarea name="information">{{recipes.information}}</textarea></div>
    </div>
