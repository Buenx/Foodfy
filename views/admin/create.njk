{% extends 'layout.njk' %}

{% block head %}
  <title>recipes</title>
  <link rel="stylesheet" href="/edit.css">
{% endblock %}

{% block header %}
  <img src="/assets/logo2.png" onclick="location.href = '/';" id="logo" alt="">
{% endblock %}

{% block content %}

  <form class="card" method="POST" action="/admin/recipes">

    <div class="title" >
      <p>Editando receitas</p>
      <button id="save-button" class="edit" type="submit">Salvar receita</button>
    </div>

    <div class="item">
      <div>Imagem da receita</div>
      <div><input type="text" placeholder="oi" name="image"></div>
    </div>
  
    <div class="item">
      <div>Ingredientes</div>
      <div id="ingredients">
        <div class="ingredient">
          <input type="text" name="ingredients[]" value="" placeholder="Adicione o ingrediente">
        </div>
      </div>
      <button type="button" class="add-ingredient">Adicionar Ingredient</button>
    </div>

    <div class="item">
      <div>Modo de preparo</div>
      <div id="preparations">
        <div class="preparation">
          <input type="text" name="preparation[]" value="" placeholder="Adicione o passo">
        </div>
      </div>
      <button type="button" class="add-preparation">Adicionar Preparation</button>
    </div>

    <div class="item">
      <div>Informações adicionais</div>
      <div><textarea name="information"></textarea></div>
    </div>

  </form>

  <script src="/ingredients.js"></script>

  {% block footer %}
  {% endblock %}

{% endblock %}