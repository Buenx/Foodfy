{% extends 'layout.njk' %}

{% block head %}
  <title>recipes</title>
  <link rel="stylesheet" href="/styles/panel.css">
{% endblock %}

{% block header %}
  <img src="/assets/logo2.png" onclick="location.href = '/';" id="logo" alt="">
{% endblock %}

{% block content %}
  <main>
    <div class="title">Gerenciar receitas</div>
    <section class="cards">
      {% for recipe in recipes %}
        <div class="card">
          <div class="card-image">
            <img src="{{recipe.image}}" alt="">
          </div>
          <div class="card-info">
            <h1 class="food-name">{{recipe.title}}</h1>
            <p class="chef-name">{{recipe.author}}</p>
            <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
          </div>
        </div>
      {% endfor %}
    </section>
  </main>


  {% block footer %}
  {% endblock %}

{% endblock %}